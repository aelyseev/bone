{
    "compilerOptions": {
        "jsx": "preserve",
        "noEmit": true,
        "rootDir": "src",
        "target": "es6",
        "experimentalDecorators": true
    },
    "filesGlob": [
        "./node_modules/typescript/lib/lib.es6.d.ts",
        "./typings/**/*.d.ts",
        "./src/**/*.tsx",
        "./src/**/*.ts",
        "./tests/**/*.ts",
        "./tests/**/*.tsx",
        "./examples/**/*.ts",
        "./examples/**/*.tsx"
    ],
    "ide": {
        "compileOnSave": false
    },
    "compileOnSave": false,
    "awesomeTypescriptLoaderOptions": {
        "compiler": "typescript"
    }
}
